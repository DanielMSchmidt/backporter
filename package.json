{
  "name": "backporter",
  "version": "0.0.0",
  "description": "Need to backport a bug fix to one or more older versions of your software? This CLI is for you!",
  "homepage": "",
  "author": {
    "name": "Daniel Schmidt",
    "email": "dschmidt@mesosphere.com"
  },
  "main": "src/index.js",
  "bin": {
    "backporter": "src/index.js"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "prettier": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-xo": "^0.24.2",
    "jest": "^23.5.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-await-in-loop": [
        "warn"
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "repository": "DanielMSchmidt/backporter",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "dependencies": {
    "inquirer": "^6.2.0",
    "node-cmd": "^3.0.0"
  }
}
